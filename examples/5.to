/// the add recipe tells the compiler what to do when lhs + rhs is encountered
recipe Add {
    toast Output;
    toaster add :> me, other: Me -> Output;
}

bake int with Add {
    toast Output = Me; // Me is a synonym for int

    toaster add :> me, other: Me -> Output {
        __intrinsic_int_add(me, other);
    }
}

